@model List<Department>



<a href="/Department/New" class="btn btn-success">Create New Department</a>
    <br />
    <br />
    <hr />

<table class="table table-hover table-bordered" id="myID">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Location</th>
        <th>Actions</th>
    </tr>


    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Location</td>
            <td>
                <a href="/Department/Edit?id=@item.Id" class="btn btn-secondary">Edit</a>
                <a href="/Department/Delete?id=@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

    </table>